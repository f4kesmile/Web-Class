generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum Role {
  SUPER_ADMIN
  ADMIN
  USER
}

enum AgendaType {
  ASSIGNMENT
  EXAM
  EVENT
  OTHER
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model User {
  id            String  @id @default(cuid())
  name          String
  email         String  @unique
  emailVerified Boolean
  image         String?
  role          Role    @default(USER)
  isBanned      Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions Session[]
  accounts Account[]
  officer  Officer?

  activityLogs  ActivityLog[]
  announcements Announcement[]

  @@map("user")
}

model ActivityLog {
  id        String  @id @default(cuid())
  action    String
  details   String? @db.Text
  ipAddress String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Announcement {
  id       String  @id @default(cuid())
  title    String
  content  String  @db.Text
  isActive Boolean @default(true)

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?   @db.Text
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

model Agenda {
  id          String     @id @default(cuid())
  title       String
  subject     String?
  description String?    @db.Text
  deadline    DateTime
  type        AgendaType @default(ASSIGNMENT)

  createdBy String
  createdAt DateTime @default(now())
}

model Schedule {
  id        String    @id @default(cuid())
  day       DayOfWeek
  startTime String
  endTime   String
  subject   String
  lecturer  String?
  room      String?
  credits   Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Gallery {
  id          String   @id @default(cuid())
  title       String   @default("Kegiatan Kelas")
  description String?  @db.Text
  imageUrl    String   @db.LongText
  eventDate   DateTime @default(now())

  createdAt DateTime @default(now())
}

model Officer {
  id           String @id @default(cuid())
  position     String
  displayOrder Int    @default(99)

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model SiteSettings {
  id String @id @default(cuid())

  siteName    String  @default("Web Kelas")
  description String? @db.Text

  className    String @default("Informatika 4C")
  semester     String @default("4")
  academicYear String @default("2024/2025")

  supportEmail String?
  instagram    String?
  whatsapp     String?

  emailSender String?

  updatedAt DateTime @updatedAt
}
